#!/bin/bash
# pull particular versions of fenics projects
# 
# usage: pull_fenics_paper0


set -e

if [ -z "$SRC_DIR" ]; then
    echo "SRC_DIR must be defined" >&2
    exit -1
fi

function pull () {
        project="$2"
        echo "FENICS-BUILDER: Pulling $project..."
        cd "$SRC_DIR"
        if [ -d $project ]; then
            cd $project
            git fetch
        else
            git clone https://bitbucket.org/$1/$project.git
            cd $project
        fi
        git checkout $3
}

pull fenics-project fiat     c36b6d7a988a211b04048f64c7155b0c25ed5a52
pull fenics-project ufl      0c5b1b90498aa4f9a25fb1999463d3c1c010199a
pull fenics-project instant  2f355dec4142c56eb4d464e5975a1e6ea3eac493
pull fenics-project ffc      4dc648a466ad087448a41921ade005f114e41268
pull fenics-project dolfin   fcf70d934d63168e5ed037678e22ac66fb2b3474
pull fenics-project mshr     7447149c972977ff8ce2e89283d1ed0525fa2bc6
pull blechta dolfin-tape     02fd4ddd583328a878593d1bf36769df12306d53
